{% extends 'news/layout.html.twig' %}

{% block title %}News{% endblock %}

{% block row_content %}
    <div class="row">
        {% for article in articles %}
            <div class="col-sm-6 col-md-4">
                <div class="card mb-4">
                    <img class="card-img-top" src="{{ article.imageUrl }}" alt="image" />
                    <div class="card-body">
                        <h5 class="card-title">{{ article.title }}</h5>
                        <p class="card-text">{{ article.content | slice(0,100) }}(...)</p>

                        <a href="{{ path('news_show', {'id': loop.index}) }}" class="card-link">Lire la suite</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}