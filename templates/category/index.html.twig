{% extends 'category/layout.html.twig' %}

{% block title %}Category{% endblock %}

{% block row_content %}
    <div class="row">
        {% for category in categories %}
            <div class="col-sm-6 col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">{{ category.name }}</h5>
                        <a href="{{ path('category_show', {'id': loop.index}) }}" class="card-link">Lire la suite</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
